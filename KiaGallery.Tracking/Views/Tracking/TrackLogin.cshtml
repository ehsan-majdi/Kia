@{
    ViewBag.Title = "TrackLogin";
    Layout = null;
}
<!DOCTYPE html>
<html dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - سیستم پیگیری سفارشات مشتریان گالری کیا</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-rtl.min.css" rel="stylesheet" />
    <link href="~/Content/sans/fontiran.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/uikit.min.css" rel="stylesheet" />
    <script src="~/Script/jquery-1.12.4.min.js"></script>
    <script src="~/Script/modernizr-2.8.3.js"></script>
    <script src="~/Script/bootstrap.min.js"></script>
    <script src="~/Script/bootstrap-rtl.min.js"></script>
    <script src="~/Script/General.js"></script>
    <script src="~/Script/Entity.js"></script>
    <script src="~/Script/Validate.js"></script>
    <script src="~/Script/uikit.min.js"></script>
    <script src="~/Script/jsrender.js"></script>

</head>

<body>
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
        }

        .div-father {
            height: 100%;
        }

        .background-form {
            background-color: rgba(255,255,255,0.6);
            position: absolute;
            top: 50%;
            right: 50%;
            width: 550px;
            border-radius: 5px;
            transform: translate(50%, -50%);
            height: 0px;
            padding-right: 50px;
            padding-left: 50px;
        }

        #logo {
            display: none;
            margin-top: 125px;
            max-width: 200px;
        }

        .background-page {
            background-image: url(/Content/Background-image.jpg);
            height: 100%;
            position: relative;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }

        #ui-button {
            background-color: rgb(108,109,113);
            color: white;
            padding: 10px;
            width: 100%;
            border: none;
            border-radius: 2px;
        }

        .form-signin {
            display: none;
        }

        @@media screen and (max-width:1600px) and (min-width: 200px) {
            .background-form {
                background-color: rgba(255,255,255,0.6);
                position: fixed;
            }
        }
    </style>
    <div class="div-father">
        <div class="background-page">
            <div class="background-form">
                <form action="/tracking/track" method="post" id="fade">
                    <div class="form-signin ">
                        <div class="logo-kia text-center">
                            <img id="logo" src="~/Content/logokia.png" />
                        </div>
                        <br />
                        <br />
                        <br />
                        <div class="form-group col-md-6 ">
                            <input type="text" id="inputPhoneNumber" class="uk-input text-center" placeholder="شماره تلفن" name="phoneNumber" autofocus>
                        </div>
                        <div class="form-group col-md-6 ">
                            <input type="text" id="inputTrackCode" class="uk-input text-center" name="trackCode" placeholder="کد پیگیری">
                        </div>
                        <div class="row">
                            <div class="col-md-10">
                                <button class="btn btn-primary btn-cons pull-right" type="submit" style="padding:6px 20px">lllll</button>
                            </div>
                        </div>
                        <div class="form-group col-md-12">
                            <button id="ui-button" type="submit">ورود</button>
                        </div>
                        <div class="form-group">
                            @if (ViewBag.Message != null)
                            {
                                <br />
                                <div class="label label-danger">
                                    @ViewBag.Message
                                </div>
                            }
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <script type="text/javascript">
        $(document).ready(function () {

            $(".background-form").animate({ height: '550px' }, 1000, function () {
                $(".form-signin").fadeIn(500);
                $("#logo").fadeIn(500);

            });


        });

    </script>
</body>
</html>


