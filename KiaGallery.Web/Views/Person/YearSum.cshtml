
@{
    ViewBag.Title = "YearSum";
    Layout = null;
}

<!DOCTYPE html>
<html dir="rtl">
<head>
    <link href="~/Content/fonts/fontawsome/font-awesome.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.12.4.min.js"></script>
    <script src="~/Scripts/bootstrap-rtl.js"></script>
    <link href="~/Content/bootstrap-rtl.css" rel="stylesheet" />
    <link href="~/Content/fonts/Bmitra/Bmitra.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>فرم سنوات</title>
    <style>
        * {
            font-family: BMitra;
            /*font-size:17px !important*/
        }

        body {
            font-family: IRANSans
        }

        table, th, td {
            border: 2px solid black;
            border-collapse: collapse
        }

        th, td {
            padding: 5px;
            text-align: center;
        }

        table#t01 {
            width: 100%;
            background-color: #f1f1c1;
        }

        .branch {
            position: absolute;
            top: 3px;
            left: 65px;
        }
    </style>
</head>
<body style="">
    <div class="container" style="width:400px;text-align:center;margin:0px auto">
        <div>
            <p style="text-align:left">@ViewBag.Date</p>
            <p style="font-size: 18px;"><b>فرم پرداخت سنوات</b></p>
        </div>
        <table style="width:100%;text-align:right">
            <tr>
                <th style="padding:20px;" colspan="6" class="txt-al-c">مشخصات پرسنلی:</th>
            </tr>
            <tr>
                <th>شماره پرسنلی</th>
                <th colspan="3">نام</th>
                <th style="padding-right:130px;position:relative" colspan="3"><span class="branch">شعبه فعالیت</span></th>
            </tr>
            <tr>
                <td>@ViewBag.PersonNumber</td>
                <td colspan="3" class="txt-al-c">@ViewBag.FullName </td>
                <td colspan="3">@ViewBag.Branch</td>
            </tr>
            <tr>
                <th style="position:relative;padding:10px" colspan="6" class="txt-al-c"> وضعیت همکاری:   <span style="position:absolute;left: 76px;">تسویه</span></th>
            </tr>
            <tr>
                <th colspan="1">تاریخ شروع همکاری</th>
                <th colspan="6">@ViewBag.StartDate</th>
            </tr>
            <tr>
                <th colspan="1">تاریخ پایان همکاری</th>
                <th colspan="6">@ViewBag.Date</th>
            </tr>
            <tr>
                <th rowspan="2">مدت کل همکاری</th>
                <th>سال</th>
                <th>ماه</th>
                <th>روز</th>
                <th>کل (روز)</th>
            </tr>
            <tr>
                <td>@ViewBag.Year</td>
                <td>@ViewBag.Month</td>
                <td>@ViewBag.Day</td>
                <td>@ViewBag.DaysSum</td>
            </tr>
            <tr>
                <th style="padding:30px" colspan="6">
                    <span class="pull-right">نرخ حقوق پایه ماهانه مصوب سال @ViewBag.ThisYear</span><span class="pull-left">@ViewBag.Payment ریال</span>
                    <br />
                    <br />
                    <span class="pull-right">نرخ حق سنوات روزانه مصوب سال @ViewBag.ThisYear </span><span class="pull-left">@ViewBag.DailyPay ریال</span>
                </th>
            </tr>
            <tr>
                <th style="padding:10px" colspan="6">
                    <span class="pull-right">مبلغ سنوات قابل پرداخت </span><span class="pull-left">@ViewBag.YearPay ریال</span>
                </th>
            </tr>
        </table>
        <br />
        <p>اینجانب .................................................. مبلغ فوق را به عنوان سنوات تایید و دریافت نموده ام.</p>
        <div style="margin-right: 260px;">
            <p>تاریخ:</p>
            <p>امضا:</p>
        </div>
    </div>
</body>

</html>
<br>
