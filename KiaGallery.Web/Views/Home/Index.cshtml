<input type="hidden" id="hiddenDate" name="date" value="@ViewBag.Date" />

<div id="importModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h5>محاسبه قیمت طلای خام</h5>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group" id="staticParent">
                        <h4>قیمت نهایی محصول</h4>
                        <input class="form-control deleteVal money-separator" type="text" id="finalProductPrice" name="" placeholder="0">
                        <h4>وزن</h4>
                        <input class="form-control deleteVal" type="text" id="weight" name="" placeholder="0">
                        <h4>اجرت</h4>
                        <input class="form-control deleteVal money-separator" type="text" id="wage" name="" placeholder="0">
                        <h4>قیمت سنگ و چرم</h4>
                        <input class="form-control deleteVal money-separator" type="text" id="stoneLeatherPrice" name="" placeholder="0">
