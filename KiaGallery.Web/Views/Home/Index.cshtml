    <script type="text/javascript">

        $(function () {
            $('#staticParent').on('keydown', '.form-control', function (e) { -1 !== $.inArray(e.keyCode, [46, 8, 9, 27, 13, 110]) || (/65|67|86|88/.test(e.keyCode) && (e.ctrlKey === true || e.metaKey === true)) && (!0 === e.ctrlKey || !0 === e.metaKey) || 35 <= e.keyCode && 40 >= e.keyCode || (e.shiftKey || 48 > e.keyCode || 57 < e.keyCode) && (96 > e.keyCode || 105 < e.keyCode) && e.preventDefault() });
        })

        $("#form").find("[name]").each(function (index, element) {
            moneySeparator(element);
        });

        $("#modalShow").click(function () {
            $("#importModal").modal("show")
        });
        $("#branchGoldModalShow").click(function () {
            $("#branchGoldWeight").val("")
            $("#price").val("")
            $("#branchGoldModal").modal("show")
            goldWeightList($("#hiddenDate").val())
        });
        $("#btnSaveBranchGold").click(function () {
            var time = new Date();
            var entity =
            {
                price: $("#price").val().replaceAll(",", ""),
                date: $("#hiddenDate").val(),
                hour: time.getHours(),
                minute: time.getMinutes(),
                second: time.getSeconds(),
                weight: $("#branchGoldWeight").val()
            }
            if (!entity.price) {
                alert("قیمت طلا به درستی وارد نشده است.")
                return
            }
            if (!entity.weight) {
                alert("وزن طلا به درستی وارد نشده است.")
                return
            }
            loader(true);
            $.post('/branchgold/save', entity, function (response) {
                loader(false);
                if (response.status == 200) {

                    $("#branchGoldModal").modal("hide");
                }
                else {
                    alert(response.message);
                }
            });
        });
        function goldWeightList(date) {
            $.get('/branchgold/search', { date: date }, function (response) {
                loader(false);
                if (response.status == 200) {

                    var data = response.data;
                    var template = $.templates("#template-soldGold");
                    var htmlOutput = template.render(data);
                    $(".soldGold-modal").html(htmlOutput);

                }
                else {
                    alert(response.message);
                }
            });
        }

        $(".btnDeleteVal").on("click", function () {
            $(".deleteVal").val(null);
        });

        $("#calculate").click(function () {
            var staticnum = 0.91743119266
            var staticnum2 = 0.93457943925;
            var weight = parseFloat($('#weight').val());
            var wage = parseFloat($('#wage').val().replace(/,/g, ""));
            var stoneLeatherPrice = parseFloat($('#stoneLeatherPrice').val().replace(/,/g, ""));
            var finalProductPrice = parseFloat($('#finalProductPrice').val().replace(/,/g, ""));
            var notRoundedGoldPrice = ((((finalProductPrice * 0.91743119266) - stoneLeatherPrice)) * 0.93457943925) / weight - wage;
            var roundedGoldPrice = Math.ceil(notRoundedGoldPrice / 10000) * 10000;
            $("#roundedGoldPrice").val(toSeparator(roundedGoldPrice));
        });

    </script>
