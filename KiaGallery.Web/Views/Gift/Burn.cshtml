    }

    #headSoldToTheCustomer, #searchForm {
        position: absolute;
        z-index: 111;
        top: 200px;
        right: 100px;
        border-radius: 10px;
    }

    #headUsed {
        position: absolute;
        z-index: 111;
        top: 200px;
        left: 40px;
        border-radius: 10px;
    }

    #headSoldToTheCustomer, #formSoldToTheCustomer {
