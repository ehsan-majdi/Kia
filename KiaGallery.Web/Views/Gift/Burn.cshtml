        margin-top: -100px;
    }

    .circle3 {
        border-radius: 100%;
        width: 400px;
        height: 400px;
        padding: 50px;
        background-color: #f3e4ef;
    }

    .circle2 {
        border-radius: 100%;
        width: 500px;
        height: 500px;
        padding: 50px;
        background-color: #f9dde7;
    }

    .circle1 {
        border-radius: 100%;
        width: 600px;
        height: 600px;
        padding: 50px;
