    }

    .addParent:hover {
        color: white;
    }

    hr.line {
        border: 0;
        height: 1px;
        border-radius: 15px;
        background-image: -moz-linear-gradient(left, #f0f0f0, #8c8b8b, #f0f0f0);
        position: relative;
        top: -50px;
    }
</style>

